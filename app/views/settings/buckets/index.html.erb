<% content_for :page_title do %>
  Settings::Buckets
<% end %>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th># Files</th>
      <th># Folders</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @buckets.each do |bucket| %>
      <tr>
        <td><%= bucket.name %></td>
        <td>region</td>
        <td>#</td>
        <td>#</td>
        <td><%= time_ago_in_words bucket.created_at %></td>
        <td><%= time_ago_in_words bucket.updated_at %></td>
        <td>edit</td>
        <td>delete</td>
      </tr>
    <% end %>
  </tbody>
</table>