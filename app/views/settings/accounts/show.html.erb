<% content_for :page_title do %>
  Settings::Account
<% end %>

<%# style guide: http://simple-form-bootstrap.plataformatec.com.br/ %>
<%= form_for(current_user, :as => :user, :url => settings_account_path) do |form| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-3 control-label">Email</label>
    <div class="col-sm-9">
      <%= form.text_field :email, :disabled => :true, :class => "form-control noselect" %>
      <p class="help-block">can not be changed/p>
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-3 control-label">Password</label>
    <div class="col-sm-9">
      <%= form.password_field :password, :class => "form-control" %>
      <p class="help-block">Lorem ipsum dolor sit amet</p>
    </div>
  </div>


  <div class="form-group">
    <label for="inputPassword3" class="col-sm-3 control-label">Confirmation</label>
    <div class="col-sm-9">
      <%= form.text_field :password_confirmation, :class => "form-control"  %>
      <p class="help-block">Lorem ipsum dolor sit amet</p>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-3 control-label">Access Key ID</label>
    <div class="col-sm-9">
      <%= form.text_field :access_key_id, :class => "form-control" %>
      <p class="help-block">can not be changed</p>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-3 control-label">Secret Access Key</label>
    <div class="col-sm-9">
      <%= form.text_field :secret_access_key, :class => "form-control" %>
      <p class="help-block">can not be changed</p>
    </div>
  </div>

  <%= form.hidden_field :id %>
  <button type="submit" class="btn btn-default">Update Account</button>
<% end %>